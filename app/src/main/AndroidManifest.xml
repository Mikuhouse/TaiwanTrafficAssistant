<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.taiwantrafficassistant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:permission=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bus.BusListActivity"
            android:label="@string/bus_list_activity_label">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".bus.BusRouteSearchActivity"
            android:label="@string/bus_route_search_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".bus.BusListActivity" />
        </activity>
        <activity
            android:name=".test.TestGithubRepoApiActivity"
            android:label="@string/test_github_repo_api_label">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".bus.BusListActivity" />
        </activity>
        <activity
            android:name=".test.TestPtxApiActivity"
            android:label="PtxRailWayApiTest">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".bus.BusListActivity" />
        </activity>
        <activity android:name=".bus.BusTimeOfArrivalActivity"
            android:label="公車到站時間">

        </activity>
    </application>

</manifest>